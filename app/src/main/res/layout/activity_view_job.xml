<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:layout_height="match_parent"
    tools:context=".View_Job_Activity">
<!--    // Create jobs table-->
<!--    // job_id,title,company,location,salary,date,description-->

    <TextView
        android:id="@+id/tv_view_title"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="44dp"
        android:autoSizeTextType="uniform"
        android:text="Title"
        android:textSize="25px"
        android:textStyle="bold"
        android:tooltipText="Title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_view_company"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="92dp"
        android:autoSizeTextType="uniform"
        android:drawableStart="@drawable/company_icon"
        android:text="Company"
        android:textSize="17px"
        android:tooltipText="Company name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_view_location"
        android:drawableStart="@drawable/location_icon"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="148dp"
        android:autoSizeTextType="uniform"
        android:text="Location"
        android:textSize="13px"
        android:tooltipText="Location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_view_salary"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:drawableStart="@drawable/salary_icon"
        android:layout_marginStart="244dp"
        android:layout_marginTop="104dp"
        android:autoSizeTextType="uniform"
        android:text="Salary"
        android:textSize="17px"
        android:tooltipText="Salary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_view_description"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="200dp"
        android:autoSizeTextType="uniform"
        android:text="Description"
        android:textSize="12px"
        android:textStyle="italic"
        android:tooltipText="Job Description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_view_date"
        android:drawableStart="@drawable/posted_icon"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginStart="244dp"
        android:layout_marginTop="40dp"
        android:autoSizeTextType="uniform"
        android:text="Date"
        android:textSize="17px"
        android:tooltipText="Date posted"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>