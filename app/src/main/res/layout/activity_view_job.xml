<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:layout_height="match_parent"
    tools:context=".View_Job_Activity">
<!--    // Create jobs table-->
<!--    // job_id,title,company,location,salary,date,description-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_view_title"
            android:layout_width="wrap_content"
            android:textSize="40dp"
            android:tooltipText="Title"
            android:text="Title"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Company"
            android:id="@+id/tv_view_company"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:tooltipText="Company name"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Location"
            android:id="@+id/tv_view_location"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:tooltipText="Location"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout

        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:text="Salary"
            android:id="@+id/tv_view_salary"
            android:textSize="25dp"
            android:layout_marginRight="200dp"
            android:layout_width="wrap_content"
            android:tooltipText="Salary"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Date"
            android:id="@+id/tv_view_date"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:tooltipText="Date posted"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <TextView
        android:text="Description"
        android:id="@+id/tv_view_description"
        android:tooltipText="Job Description"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>